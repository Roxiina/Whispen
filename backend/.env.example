# Azure OpenAI Configuration
AZURE_OPENAI_ENDPOINT=https://YOUR-RESOURCE-NAME.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Whisper Model Deployment Name
AZURE_WHISPER_DEPLOYMENT_NAME=whisper

# GPT-4 Model Deployment Name (for summarization)
AZURE_GPT4_DEPLOYMENT_NAME=gpt-4

# Application Settings
TEMP_FOLDER=./temp
MAX_FILE_SIZE_MB=200
ALLOWED_AUDIO_EXTENSIONS=mp3,wav,m4a,flac,ogg,webm

# Security
SECRET_KEY=your-secret-key-here-replace-with-generated-key
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Optional: Database (for future user management)
# DATABASE_URL=postgresql://user:password@localhost:5432/whispen

# RGPD Compliance
AUTO_DELETE_FILES_AFTER_HOURS=24
ENABLE_FILE_ENCRYPTION=true
